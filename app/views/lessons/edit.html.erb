<% provide :title, "Edit lesson" %>
<h1>Edit lesson</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @lesson do |f| %>
            <%= render 'fields', f: f %>
            <%= f.submit "Save changes", class: "btn btn-primary" %> 
        <% end %>
    </div>
</div>

<%= link_to 'back', lessons_path %>
